@{
    ViewData["Title"] = "Tải lên tài liệu";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <input type="hidden" name="projectId" value="@ViewBag.ProjectId" /> <!-- Truyền projectId vào hidden field -->

    <div class="form-group">
        <label for="documentFile">Chọn tài liệu</label>
        <input type="file" name="documentFile" id="documentFile" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="description">Mô tả tài liệu</label>
        <textarea name="description" id="description" class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Tải lên</button>
</form>
